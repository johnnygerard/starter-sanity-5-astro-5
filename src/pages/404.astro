---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="404 â€“ Page Not Found">
  <div class="mx-auto w-full max-w-3xl px-6 py-16 text-center">
    <hgroup>
      <p class="text-xs tracking-[0.3em] text-neutral-400 uppercase">
        404 Error
      </p>
      <h1
        class="mt-4 text-3xl leading-tight font-semibold text-balance sm:text-4xl"
      >
        Page Not Found
      </h1>
    </hgroup>
    <p class="mt-2 text-base text-neutral-300">
      Sorry, the page you are looking for does not exist or has been moved.
    </p>

    <div class="mt-10 flex items-center justify-center">
      <a
        href="/"
        class="inline-flex items-center gap-2 rounded-full border border-neutral-800 bg-neutral-900/70 px-5 py-2 text-sm font-semibold text-neutral-100 transition hover:border-neutral-700 hover:bg-neutral-900"
      >
        Back to Home
      </a>
    </div>
  </div>
</Layout>
